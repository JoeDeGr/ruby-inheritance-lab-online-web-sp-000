#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"


some_knowledge = avi.teach

steve.learn(some_knowledge)

puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"

jim = User.new
jim.first_name = "Jim"
jim.last_name = "Root"

some_knowledge = avi.teach

steve.learn(some_knowledge)

puts "Steve just learned this important knowledge: '#{steve.knowledge.last}' from Avi"
jim = Student.new
jim.first_name = "Jim"
jim.last_name = "Root"

some_knowledge = avi.teach
steve.learn(some_knowledge)
jim.learn(some_knowledge)
puts "Steve just learned this important knowledge: '#{steve.knowledge.last}' from Avi"

puts "Jim just learned this important knowledge: '#{jim.knowledge.first}' from Avi"

def avi_teach
  some_knowledge = avi.teach
  Students.all.each {|student| student.learn, puts "Thank you Avi, #{student.first_name} just learned: #{student.knowledge.sample}"}
end

kim = Student.new
kim.first_name = "Kim"
kim.last_name = "Root"

bob = Student.new
bob.first_name = "Bob"
bob.last_name = "Weave"

joey = Student.new
joey.first_name = "Joey"
joey.last_name = "Bag'O'Donoughts"

avi_teach